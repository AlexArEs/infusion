<div class="nested-fields" style="padding-bottom: 10px;">
    <div class="field card">
      <div class="form-group row card-body">
        <div class="col-sm-10">
          <%= f.label :file %>
          <%= f.file_field :file, :required => true, class:'form-control' %>
        </div>
        <div class="col-sm-2">
          <%= link_to_remove_association f, class:'btn btn-danger' do %><%= fa_icon 'times' %> <%= I18n.t 'main.remove' %><% end %>
        </div>
      </div>
    </div>
</div>