<%= form_for(@proposal) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, class: 'form-control' %>
  </div><br/>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: 'form-control' %>
  </div><br/>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>